<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:background="#CDCDCD" />

    <ImageView
        android:id="@+id/isrc"
        android:layout_width="150dp"
        android:layout_margin="5dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:src="@drawable/juhuasuan" />

    <TextView
        android:id="@+id/good_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/isrc"
        android:layout_margin="20dp"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/isrc"
        android:text="TextView" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text"
        android:layout_toRightOf="@+id/text"
        android:textColor="#E31A3C"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:src="@drawable/button01" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/isrc"
        android:layout_alignLeft="@+id/good_name"
        android:layout_marginBottom="25dp"
        android:text="ï¿¥ "
        android:textColor="#E31A3C"
        android:textSize="14sp" />

</RelativeLayout>